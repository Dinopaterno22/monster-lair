<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:textColorSecondary">?colorOnSecondary</item>
        <item name="android:fontFamily">@font/amaranth</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="fontFamily">@font/amaranth</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Description" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="fontFamily">@font/amaranth</item>
    </style>

    <style name="ListItem" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/amaranth_bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItem.Level" parent="ListItem">
        <item name="fontFamily">@font/amaranth</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="Caption.Trait" parent="Caption">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="fontFamily">@font/amaranth_bold</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/amaranth_bold</item>
        <item name="android:textColor">?colorOnPrimarySurface</item>
    </style>

    <style name="Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/amaranth_bold</item>
    </style>

    <style name="FilterControl">
        <item name="elevation">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>

    </style>

    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"></style>

    <style name="DropDown" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"></style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton"></style>

    <style name="Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">?colorOnBackground</item>
    </style>

    <style name="EditText.Dialog" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"></style>

    <style name="DropDown.Dialog" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"></style>

    <style name="FullScreenDialog" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
